<!--  we copied the style from our flight interfacre ejs file -->
<style>
    .maincontainer{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #3c717e;
    height: 100vh  ;
    }    
    .root{
        width: 1300;
        height: auto;
        background-color: #dfe9f0;
        border-radius: 20px;
        padding:10px;
    }
    .head{
        color:#13536d;
        font-size: 32px;
        font-weight: bold;
        font-family: 'Oxygen';
        display: flex;
        justify-content: center;
        
    }
    .rowgap{
      margin-top: 40px;
    
    }
    </style>
    
    <html>
        <head>
            <!--Import Google Icon Font-->
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
         
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</head>
<body>
   <div class="maincontainer">
       <div class="root">
        <div class="head">
            <span> <img src='/images/AirIndia.png' width="80"></span>
        Flight Enquiry System
    </div>
    <!-- materialize css table -->
        <table class="striped">

            <thead>
              <tr>
                  <th>Flight Id</th>
                  <th>Comapny Name</th>
                  <th>Source</th>
                  <th>Destination</th>
                  <th>Type</th>
                  <th>Class</th>
                  <th>Days</th>
                  <th>Update</th>
              </tr>
            </thead>

            <tbody>
            <% data.map((item)=>{ %>
              <tr>
                <td><%=item.flightid%></td>
                <th><%=item.companyname%><br>
                    <a href="/flight/showpicture?flightid=<%=item.flightid%>&companyname=<%=item.companyname%>&logo=<%=item.logo%>">
                    <img src="/images/<%=item.logo%>" width="40">
                    
                </a>
            </th>
                <td><%=item.sc%><br><%=item.sourcetiming%></td>
                <td><%=item.dc%><br><%=item.destinationtiming%></td>
                <td><%=item.status%></td>
                <td><%=item.flightclass%></td>
                <td><%=item.days%></td>
                <!-- anchor tag ke andr joh flight id di hai wohi id req.body.flightid ke bracket main likhi hai flig.js ke displayall wale mai -->
                <td> <a href="/flight/displaybyid?flightid=<%=item.flightid%>">Update </a></td>
              </tr>
              <%}) %> 
            </tbody>
          </table>

       </div>
   </div>
</body> 


</html>