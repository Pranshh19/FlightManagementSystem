        <body>
          <!-- enctype="multipart/form-data" form ka data means form ki id wghera dedo and multipart is basically multimedia i.e file bhi jaaye and data bhi in chunks i.e in small bytes-->
          <form action="/flight/EditDeleteRecord" method="post">
  <div class="maincontainer">
    <div class="root">
        <div class="head">
            <span> <img src='/images/AirIndia.png' width="80"></span>
        Flight Update System
    </div>
<!-- <hr> -->
<div class="row">
    <div class="col s6">
        <div class="input-field">
            <i class="material-icons prefix">airplanemode_active</i>
            <!-- value=<%=data.workbenchKaFieldName%> -->
            <input id="icon_fid" name="flightid" value="<%=data.flightid%>" type="text" class="validate">
            <label for="icon_fid">Flight Id</label>
          </div>
        </div>
        <div class="col s6">
            <div class="input-field">
                <i class="material-icons prefix">business</i>
                <input id="icon_com" name="companyname"  value="<%=data.companyname%>"type="text" class="validate">
                <label for="icon_com">Company Name</label>
              </div>
            </div>
        </div>

        <div class="row">
            <div class="col s3">
                <div class="input-field">
                  <i class="material-icons prefix">flight_takeoff</i>
                  <select name="sourcestate" id="sourcestate">
                    <option value="<%=data.sourcestateid%>"  selected><%=data.ss%></option>
                   
                  </select>
                  <label>Source State</label>
                
                  </div>
                </div>
                <div class="col s3">
                    <div class="input-field">
                      <i class="material-icons prefix">flight_takeoff</i>
                      <select name="sourcecity" id="sourcecity">
                        <option value="<%=data.sourcecityid%>" selected><%=data.sc%></option>
                       
                      </select>
                      <label>Source City</label>
                      </div>
                    </div>
                <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select name="desstate" id="desstate">
                                <option value="<%=data.destionationstateid%>"  selected><%=data.ds%></option>
                   
                             
                            </select>
                            <label>Destination State</label>
                          </div>
                        </div>
                <div class="col s3">
                        <div class="input-field">
                                <i class="material-icons prefix">flight_land</i>
                                <select name="descity" id="descity">
                                    <option value="<%=data.destinationcityid%>" selected><%=data.dc %></option>
                   
                                 
                                </select>
                                <label>Destination City</label>
                              </div>
                            </div>
                </div>

    
<div class="row">
     <div class="col s3">
  <div class="input-field">
    <select name="Status">
      <option  selected><%=data.status%></option>
      <option >Non Stop</option>
      <option >With Stop</option>
    </select>
    <label>Status</label>
  </div>
</div>

<% var tclass=data.flightclass.split('#')
    var ts=['','','']
    for(i=0;i<tclass.length;i++){
        if(tclass[i]=='Business'){
            ts[0]='checked'
        }
        if(tclass[i]=='Economy'){
            ts[1]='checked'
        }
        if(tclass[i]=='Executive'){
            ts[2]='checked'
        }
    }

%>
  <div class="col s3" style="display: flex; flex-direction: row; justify-content: space-around; ">

      
  <p>
    <label>
      <input name='fclass' value="Business" type="checkbox" <%=ts[0]%> />
      <span>Business</span>
    </label>
  </p>

  <p>
    <label>
      <input name='fclass' value="Economy" type="checkbox" <%=ts[1]%>  />
      <span>Economy</span>
    </label>
  </p>

  <p>
    <label>
      <input name='fclass' value="Executive" type="checkbox" <%=ts[2]%> />
      <span>Executive</span>
    </label>
  </p>
  </div>



    <div class="col s3">

        <div class="input-field">
            <i class="material-icons prefix">access_time</i>
            <input id="icon_sourcetime" name="sourcetime" value="<%=data.sourcetiming%>" type="text" class="timepicker">
            <label for="icon_sourcetime">Source Time</label>
          </div> 
        </div>
        <!-- destinationtime -->

        <div class="col s3">
            <div class="input-field">
              <i class="material-icons prefix">access_time</i>
              <input type="text" class="timepicker" name="destinationtime" value="<%=data.destinationtiming%>" id="icon_destinationtime" >
              <label for="icon_destinationtime">Destination Time</label>
              </div> 
            </div>

        </div>


        <div class="row">
        <div class="col s12" style="display: flex; flex-direction: row; justify-content: space-around; ">
            <p>
              <label>
                <input name='days' value="Sunday" type="checkbox" <%=data.days.includes('Sunday')? 'checked':' '%>/>
                <span>Sunday</span>
              </label>
            </p>
          
            <p>
              <label>
                <input name='days' value="Monday" type="checkbox" <%=data.days.includes('Monday')? 'checked':' '%>/>
                <span>Monday</span>
              </label>
            </p>
          
            <p>
              <label>
                <input name='days' value="Wednesday" type="checkbox" <%=data.days.includes('Wednesday')? 'checked':' '%> />
                <span>Wednesday</span>
              </label>
            </p>

            <p>
                <label>
                  <input name='days' value="Thursday" type="checkbox" <%=data.days.includes('Thursday')? 'checked':' '%> />
                  <span>Thursday</span>
                </label>
              </p>

              <p>
                <label>
                  <input name='days' value="Friday" type="checkbox" <%=data.days.includes('Friday')? 'checked':' '%> />
                  <span>Friday</span>
                </label>
              </p>

              <p>
                <label>
                  <input name='days' value="Saturday" type="checkbox"  <%=data.days.includes('Saturday')? 'checked':' '%>/>
                  <span>Saturday</span>
                </label>
              </p>

              

            </div>
          </div> 


             <div class="row">
               <!-- The below css is centering the buttons -->
              <!-- style="display:flex; justify-content:center; -->
              <div class="col s4" style="display:flex; justify-content:center;">
             <button class="btn waves-effect waves-light" type="submit" name="btn" value="edit">Edit
              <i class="material-icons right">send</i>
            </button>
            </div>

            

            <div class="col s4" style="display:flex; justify-content:center;">
            <button class="btn waves-effect waves-light" type="submit" name="btn" value="delete">Delete
              <i class="material-icons right">remove</i>
            </div>
            </div>

    </div>
    </div>

  </form>
      <!-- MDB -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

        </body>
    </html>